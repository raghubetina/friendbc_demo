<div class="page-header">
  <h1>
    <%= @user.username %>
    <small>
      <%= link_to '<i class="icon-edit"></i>'.html_safe, edit_user_url(@user) %>
      <%= link_to '<i class="icon-trash"></i>'.html_safe, @user, method: 'delete', data: { confirm: "Do you really want to delete this user?" } %>
      <%= link_to "Authorize Facebook", "https://www.facebook.com/dialog/oauth?client_id=#{ENV['FRIENDBC_APP_ID']}&redirect_uri=http://localhost:3000/auth/facebook&scope=read_stream" %>
      <%= link_to "Authorize Twitter", "/auth/twitter" %>
    </small>
  </h1>
</div>

<ul class="media-list">
  <% @posts.each do |the_post| %>
    <%= render 'post', post: the_post %>
  <% end %>
</ul>

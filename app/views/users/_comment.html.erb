<div class="media">
  <div class="pull-left">
    <%= image_tag "https://graph.facebook.com/#{comment['from']['id']}/picture", class: 'media-object' %>
  </div>
  <div class="media-body">
    <h4 class="media-heading">
      <%= comment['from']['name'] %>
      <small><%= time_ago_in_words(comment['created_time']) %> ago</small>
    </h4>
    <p><%= comment['message'] %></p>
  </div>
</div>
